{
	"name": "aurore-cv",
	"description": "Mon curriculum vitæ, de moi même Aurore Leclerc, en version web avec une implémentation en Electron.",
	"repository": "git@github.com:auroreLeclerc/auroreCV.git",
	"scripts": {
		"localhost": "npm run upgrade-all; npm run test; http-server",
		"upgrade-all": "npm-check-updates -u; npm install --legacy-peer-deps",
		"populate-apple": "pwa-asset-generator ./src/img/homeMade/CV.svg ./src/img/homeMade/icons/apple -a './src' -i ./src/apple.html -b 'linear-gradient(to bottom right, #e830c9, #3b3be8)'",
		"populate-cache": "git ls-files --cached --others --exclude-standard | grep -E -v '^\\.|^electron|maintenance|tsconfig|eslint' | jq -R -s 'split(\"\n\") | map(select(. != \"\"))'> ./src/json/cache.json",
		"populate": "npm run populate-apple; npm run populate-cache",
		"capacitor:populate": "npx @capacitor/assets generate --android",
		"test": "mocha; eslint; stylelint '**/*.css'",
		"ts": "rm -r ./out; npx tsc -b tsconfig.json",
		"build:electron": "npm run ts; node ./out/ts/electron/builder.js",
		"build:capacitor": "rm -r android; npx cap add android; npx cap sync; npx cap build"
	},
	"author": "Aurore Leclerc",
	"type": "module",
	"license": "GPL-3.0",
	"version": "2.4.0",
	"changelogs": [
		"Application installable en ElectronJs",
		"Application installable en APK Capacitor"
	],
	"devDependencies": {
		"@capacitor/assets": "^3.0.5",
		"@capacitor/cli": "^6.0.0",
		"@eslint/eslintrc": "^3.1.0",
		"@eslint/js": "^9.3.0",
		"@stylistic/eslint-plugin": "^2.1.0",
		"@tsconfig/node-lts": "^20.1.3",
		"@tsconfig/recommended": "^1.0.6",
		"@types/eslint-plugin-mocha": "^10.4.0",
		"@types/expect.js": "^0.3.32",
		"@types/mocha": "^10.0.6",
		"@types/serviceworker": "^0.0.86",
		"@types/web": "^0.0.147",
		"@typescript-eslint/eslint-plugin": "^7.10.0",
		"@typescript-eslint/parser": "^7.10.0",
		"electron": "^30.0.8",
		"electron-builder": "^24.13.3",
		"eslint": "^9.3.0",
		"eslint-plugin-eslint-plugin": "^6.1.0",
		"eslint-plugin-jsdoc": "^48.2.6",
		"eslint-plugin-mocha": "^10.4.3",
		"expect.js": "^0.3.1",
		"globals": "^15.3.0",
		"http-server": "^14.1.1",
		"mocha": "^10.4.0",
		"npm-check-updates": "^16.14.20",
		"pwa-asset-generator": "^6.3.1",
		"stylelint": "^16.6.0",
		"stylelint-config-standard": "^36.0.0",
		"typescript": "^5.4.5"
	},
	"dependencies": {
		"@awesome-cordova-plugins/core": "^6.7.0",
		"@awesome-cordova-plugins/device": "^6.7.0",
		"@awesome-cordova-plugins/dialogs": "^6.7.0",
		"@awesome-cordova-plugins/social-sharing": "^6.7.0",
		"@awesome-cordova-plugins/status-bar": "^6.7.0",
		"@capacitor/android": "^6.0.0",
		"@capacitor/core": "^6.0.0",
		"cordova-plugin-device": "^2.1.0",
		"cordova-plugin-dialogs": "^2.0.2",
		"cordova-plugin-statusbar": "^4.0.0",
		"cordova-plugin-x-socialsharing": "^6.0.4",
		"es6-promise-plugin": "^4.2.2"
	}
}
