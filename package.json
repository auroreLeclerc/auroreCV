{
	"name": "aurore-cv",
	"description": "Mon curriculum vitæ, de moi même Aurore Leclerc, en version web avec une implémentation en Electron.",
	"repository": "git@github.com:auroreLeclerc/auroreCV.git",
	"main": "./index.js",
	"scripts": {
		"localhost": "npm run upgrade-all; npm run test; http-server",
		"upgrade-all": "npm-check-updates -u; npm install --legacy-peer-deps",
		"populate-apple": "pwa-asset-generator ./www/src/img/homeMade/CV.svg ./www/src/img/homeMade/icons/apple -a './src' -i ./www/src/apple.html -b 'linear-gradient(to bottom right, #e830c9, #3b3be8)'",
		"populate-cache": "cd www; git ls-files --cached --others --exclude-standard | grep -E -v 'maintenance|jsconfig|node_modules|package-lock' | jq -R -s 'split(\"\n\") | map(select(. != \"\"))'> ./src/json/cache.json; cd ..",
		"populate": "npm run populate-apple; npm run populate-cache",
		"test": "mocha; eslint; stylelint '**/*.css'",
		"build:electron": "npm run clean; npx tsc -b tsconfig.json; node ./www/src/js/ts/electron/builder.js",
		"open:capacitor": "export CAPACITOR_ANDROID_STUDIO_PATH=/usr/bin/android-studio; npm run clean; npx cap add android; npx webpack; npx capacitor-assets generate --android --assetPath ./resources/capacitor; npx cap sync android; npx cap open android",
		"clean": "rm -r ./build/; rm -r ./android/; rm -r ./www/src/js/bundle/; rm -r ./www/src/js/ts/"
	},
	"author": "Aurore Leclerc",
	"type": "module",
	"license": "GPL-3.0",
	"version": "3.0.0",
	"changelogs": [
		"Application installable en ElectronJs",
		"Application installable en APK Capacitor"
	],
	"devDependencies": {
		"@capacitor/assets": "^3.0.5",
		"@capacitor/cli": "^6.1.0",
		"@eslint/eslintrc": "^3.1.0",
		"@eslint/js": "^9.6.0",
		"@stylistic/eslint-plugin": "^2.3.0",
		"@tsconfig/node-lts": "^20.1.3",
		"@tsconfig/recommended": "^1.0.7",
		"@types/eslint-plugin-mocha": "^10.4.0",
		"@types/expect.js": "^0.3.32",
		"@types/mocha": "^10.0.7",
		"@types/serviceworker": "^0.0.89",
		"@types/web": "^0.0.151",
		"@types/webpack": "^5.28.5",
		"@typescript-eslint/eslint-plugin": "^7.15.0",
		"@typescript-eslint/parser": "^7.15.0",
		"electron": "^31.1.0",
		"electron-builder": "^24.13.3",
		"eslint": "^9.6.0",
		"eslint-plugin-eslint-plugin": "^6.2.0",
		"eslint-plugin-jsdoc": "^48.5.2",
		"eslint-plugin-mocha": "^10.4.3",
		"expect.js": "^0.3.1",
		"globals": "^15.8.0",
		"http-server": "^14.1.1",
		"mocha": "^10.6.0",
		"npm-check-updates": "^16.14.20",
		"pwa-asset-generator": "^6.3.1",
		"stylelint": "^16.6.1",
		"stylelint-config-standard": "^36.0.1",
		"typescript": "^5.5.3",
		"webpack": "^5.92.1",
		"webpack-cli": "^5.1.4"
	},
	"dependencies": {
		"@capacitor/android": "^6.1.0",
		"@capacitor/core": "^6.1.0",
		"@capacitor/device": "^6.0.0",
		"@capacitor/local-notifications": "^6.0.0",
		"@capacitor/share": "^6.0.1",
		"@capacitor/status-bar": "^6.0.0",
		"capacitor-android-shortcuts": "^5.0.5"
	}
}
